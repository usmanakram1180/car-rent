  <body>
  <% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<% if alert %>
  <p class="alert"><%= alert %></p>
<% end %>
<style>
  /* Styles for notice messages */
.notice {
  padding: 10px;
  margin: 10px 0;
  background-color: #dff0d8; /* Light green background */
  color: #3c763d; /* Dark green text */
  border: 1px solid #d6e9c6; /* Green border */
  border-radius: 4px;
}

/* Styles for alert messages */
.alert {
  padding: 10px;
  margin: 10px 0;
  background-color: #f2dede; /* Light red background */
  color: #a94442; /* Dark red text */
  border: 1px solid #ebccd1; /* Red border */
  border-radius: 4px;
}
/* Add this to your stylesheet */
.notice, .alert {
  transition: opacity 0.6s ease-out; /* Smooth transition for fading out */
}

</style>

    <%= yield %>
  </body>
  <script>
  // app/javascript/packs/application.js
document.addEventListener('DOMContentLoaded', () => {
  // Function to hide messages after a timeout
  const hideMessagesAfterTimeout = () => {
    const notices = document.querySelectorAll('.notice');
    const alerts = document.querySelectorAll('.alert');

    notices.forEach(notice => {
      setTimeout(() => {
        notice.style.opacity = 0;
        setTimeout(() => notice.remove(), 600); // Remove element after fade out
      }, 10000); // 10 seconds delay
    });

    alerts.forEach(alert => {
      setTimeout(() => {
        alert.style.opacity = 0;
        setTimeout(() => alert.remove(), 600); // Remove element after fade out
      }, 10000); // 10 seconds delay
    });
  };

  hideMessagesAfterTimeout();
});

</script>

                        </h1>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav mx-auto py-0">
                            <%= link_to 'Home', root_path, class: 'nav-item nav-link active' %>
                            <%= link_to 'About', about_path, class: 'nav-item nav-link' %>
                            <%= link_to 'Service', service_path, class: 'nav-item nav-link' %>
                            <%= link_to 'Blog', blog_path, class: 'nav-item nav-link' %>

                            <div class="nav-item dropdown">
                                <%= link_to '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' } do %>
                                Pages
                                <% end %>
                                <div class="dropdown-menu m-0">
                                <%= link_to 'Our Feature', feature_path, class: 'dropdown-item' %>
                                <%= link_to 'Our Cars', cars_path, class: 'dropdown-item' %>
                                <%= link_to 'Our Team', team_path, class: 'dropdown-item' %>
                                <%= link_to 'Testimonial', testimonial_path, class: 'dropdown-item' %>
